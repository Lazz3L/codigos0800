media


#include <stdio.h>
#include <stdlib.h>



int main(){

    float n1;
    float n2;
    float media;

    printf("digite primeira nota ");
    scanf("%f",&n1);

    printf("digite segunda nota ");
    scanf("%f",&n2);

    media=(n1 + n2) /2;

    system ("cls || clear");

    printf("primeira nota %.1f \n ",n1);
    printf("Segunda nota %.1f \n ",n2);
    printf("sua media e %.1f \n  ",media);

    if(media>=7)
    {
        printf("voce foi aprovado");
    }
    else
    {
        printf("voce foi reprovado");
    }
    return 0;
}
